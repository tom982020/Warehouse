                type: 'POST',
                data: {
                    'id': id
                },
                success: function(result) {
                    // xóa ở giao diện
                    $('#' + id).remove();
                    console.log(result);
                }
            });
            return false;

            //alert(id);
        }

        function search() {
            var search = $('#search').val();
            $.ajax({
                url: '/users/search',
                type: 'post',
                data: {
